{
    "manifest_version": 3,
    "name": "Zumiez Patch",
    "short_name": "Patch",
    "version": "1.3.0",
    "description": "Patch for zumiez website",
    "icons": {
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.zumiez.com/*",
                "https://www.zumiez.ca/*"
            ],
            "js": ["zpatch.js"],
            "css": ["zpatch.css"]
        }
    ],
    "host_permissions": [
        "https://www.zumiez.com/",
        "https://www.zumiez.ca/"
    ]
}
